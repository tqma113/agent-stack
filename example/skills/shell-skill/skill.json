{
  "name": "shell",
  "version": "1.0.0",
  "description": "Execute shell commands with safety checks",
  "tools": [
    {
      "name": "execute_command",
      "description": "Execute a shell command. Dangerous commands (rm -rf, sudo, etc.) will show a warning.",
      "parameters": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "description": "The shell command to execute"
          },
          "cwd": {
            "type": "string",
            "description": "Working directory (default: current directory)"
          },
          "timeout": {
            "type": "number",
            "description": "Timeout in milliseconds (default: 30000)",
            "default": 30000
          }
        },
        "required": ["command"]
      },
      "handler": "./handlers.js#executeCommand"
    }
  ]
}
