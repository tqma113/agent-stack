{
  "model": "gpt-5.2",
  "temperature": 0.7,
  "maxTokens": 4096,
  "systemPrompt": "You are a helpful AI assistant with access to file, shell, search, and memory tools. Use them to help the user accomplish their tasks. Always explain what you're doing before using a tool. Use memory tools to remember important information across conversations.",
  "skill": {
    "directories": [
      "./skills",
      "./node_modules/@ai-stack-skill"
    ],
    "autoLoad": true
  },
  "mcp": {
    "configPath": "./mcp.json",
    "autoConnect": true
  },
  "memory": {
    "enabled": true,
    "dbPath": "./memory/sqlite.db",
    "autoInitialize": true,
    "autoInject": true,
    "tokenBudget": {
      "profile": 200,
      "taskState": 300,
      "recentEvents": 500,
      "semanticChunks": 800,
      "summary": 400,
      "total": 2200
    },
    "writePolicy": {
      "autoSummarize": true,
      "summarizeEveryNEvents": 20,
      "conflictStrategy": "latest"
    },
    "retrieval": {
      "maxRecentEvents": 10,
      "maxSemanticChunks": 5,
      "enableSemanticSearch": true
    }
  },
  "security": {
    "confirmDangerousCommands": true
  }
}
