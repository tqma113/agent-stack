{
  "model": "gpt-5.2",
  "temperature": 0.7,
  "maxTokens": 10240,
  "maxIterations": 100,
  "systemPrompt": "You are a helpful AI assistant with access to file, shell, search, memory, and knowledge tools. Use them to help the user accomplish their tasks. Always explain what you're doing before using a tool.\n\nMemory: Use memory tools to remember important information across conversations.\n\nKnowledge: For indexing external documentation websites, ALWAYS use add_doc_source (with type 'website' for recursive crawl, 'sitemap' for sitemap-based crawl) followed by crawl_docs. Do NOT manually fetch pages one by one - the crawl_docs tool will automatically discover and index all pages. Use search_code and search_docs to search indexed content.",
  "skill": {
    "directories": [
      "./skills"
    ],
    "skills": {
      "memory": {
        "path": "./node_modules/@ai-stack-skill/memory"
      },
      "knowledge": {
        "path": "./node_modules/@ai-stack-skill/knowledge"
      }
    },
    "autoLoad": true
  },
  "mcp": {
    "configPath": "./mcp.json",
    "autoConnect": true
  },
  "memory": {
    "enabled": true,
    "dbPath": "./memory/sqlite.db",
    "autoInitialize": true,
    "autoInject": true,
    "tokenBudget": {
      "profile": 200,
      "taskState": 300,
      "recentEvents": 500,
      "semanticChunks": 800,
      "summary": 400,
      "total": 2200
    },
    "writePolicy": {
      "autoSummarize": true,
      "summarizeEveryNEvents": 20,
      "conflictStrategy": "latest"
    },
    "retrieval": {
      "maxRecentEvents": 10,
      "maxSemanticChunks": 5,
      "enableSemanticSearch": true
    }
  },
  "knowledge": {
    "enabled": true,
    "dbPath": "knowledge/sqlite.db",
    "code": {
      "enabled": false,
      "rootDir": ".",
      "include": ["**/*.ts", "**/*.js", "**/*.json", "**/*.md"],
      "exclude": ["node_modules/**", "dist/**", ".git/**", "**/*.db*"]
    },
    "doc": {
      "enabled": true,
      "sources": []
    },
    "search": {
      "autoSearch": true,
      "autoInject": true,
      "minScore": 0.3,
      "maxResults": 5
    },
    "autoInitialize": true
  },
  "security": {
    "confirmDangerousCommands": true
  }
}
