{
  "model": "gpt-5.2",
  "temperature": 0.7,
  "maxTokens": 8192,
  "maxIterations": 50,

  "safety": {
    "workingDir": "../../..",
    "allowedPaths": ["**/*"],
    "blockedPaths": ["**/node_modules/**", "**/.git/**", "**/dist/**", "**/*.db*"],
    "maxFileSize": 1048576,
    "blockSecrets": true,
    "confirmDestructive": true
  },

  "history": {
    "enabled": true,
    "dbPath": ".ai-stack/history/sqlite.db",
    "maxChanges": 1000
  },

  "tasks": {
    "enabled": true,
    "dbPath": ".ai-stack/tasks/sqlite.db"
  },

  "mcp": {
    "configPath": "./mcp.json",
    "autoConnect": true
  },

  "knowledge": {
    "enabled": false,
    "code": {
      "enabled": true,
      "autoIndex": false
    },
    "doc": {
      "enabled": true,
      "autoIndex": false
    }
  }
}
